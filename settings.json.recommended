{
  "permissions": {
    "allow": [
      // ===== FILE OPERATIONS =====
      "Read(**)",
      "Write(**)",
      "Edit(**)",
      "Glob(**)",
      "Grep(**)",

      // ===== WEB OPERATIONS =====
      "WebFetch",
      "WebSearch",

      // ===== SAFE BASH COMMANDS =====
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(pip:*)",
      "Bash(node:*)",
      "Bash(mvn:*)",
      "Bash(gradle:*)",
      "Bash(make:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(kubectl:*)",
      "Bash(vercel:*)",
      "Bash(netlify:*)",

      // ===== SAFE UTILITIES =====
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(jq:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(ps:*)",
      "Bash(lsof:*)",
      "Bash(date:*)",
      "Bash(du:*)",
      "Bash(df:*)",
      "Bash(which:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",

      // ===== OLLAMA MODELS =====
      "Bash(ollama:*)",

      // ===== TESTING & BUILD =====
      "Bash(pytest:*)",
      "Bash(jest:*)",
      "Bash(vitest:*)",
      "Bash(cargo:*)",
      "Bash(go:*)",
      "Bash(javac:*)",
      "Bash(java:*)",
      "Bash(clang:*)",
      "Bash(gcc:*)",
      "Bash(cmake:*)",

      // ===== CUSTOM SLASH COMMANDS =====
      "SlashCommand(/coach:*)",
      "SlashCommand(/louisville:*)",
      "SlashCommand(/tactic:*)",
      "SlashCommand(/analyze:*)",
      "SlashCommand(/code:*)",
      "SlashCommand(/git:*)",
      "SlashCommand(/commit:*)",
      "SlashCommand(/push-pr:*)",
      "SlashCommand(/review-pr:*)",
      "SlashCommand(/audit-repo:*)",
      "SlashCommand(/audit-status:*)"
    ],

    "ask": [
      // ===== ASK BEFORE DESTRUCTIVE OPERATIONS =====
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(kill:*)",
      "Bash(killall:*)",
      "Bash(pkill:*)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(shutdown:*)",
      "Bash(reboot:*)",
      "Bash(dd:*)",
      "Bash(format:*)",

      // ===== ASK FOR FORCE OPERATIONS =====
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(npm publish:*)",
      "Bash(brew upgrade:*)",
      "Bash(apt-get upgrade:*)"
    ],

    "deny": [
      // ===== PROTECT SENSITIVE FILES =====
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/credentials.json)",
      "Read(**/secrets/**)",
      "Read(**/.ssh/id_*)",
      "Read(**/.aws/credentials)",
      "Read(**/.npmrc)",
      "Read(**/.pypirc)",

      "Edit(.env)",
      "Edit(.env.*)",
      "Edit(**/.env)",
      "Edit(**/.env.*)",
      "Edit(**/credentials.json)",
      "Edit(**/secrets/**)",
      "Edit(**/.ssh/id_*)",
      "Edit(**/.aws/credentials)",

      "Write(.env)",
      "Write(.env.*)",
      "Write(**/.env)",
      "Write(**/.env.*)",
      "Write(**/credentials.json)",
      "Write(**/secrets/**)",
      "Write(**/.ssh/id_*)",
      "Write(**/.aws/credentials)",

      // ===== PREVENT DANGEROUS BASH =====
      "Bash(:()){:|:&};:)",  // Fork bomb
      "Bash(chmod 000:*)",
      "Bash(chmod -R 000:*)"
    ],

    "additionalDirectories": [
      "~/Projects",
      "~/Desktop/1_PRIORITY_JOB_SEARCH",
      "~/Desktop/Github"
    ],

    "defaultMode": "default"
  },

  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": false,
    "allowUnsandboxedCommands": true
  },

  "alwaysThinkingEnabled": false,
  "model": "sonnet[1m]",
  "cleanupPeriodDays": 30,

  "env": {
    "PYTHONPATH": "/Library/Frameworks/Python.framework/Versions/3.14/bin/python3"
  }
}
