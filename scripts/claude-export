#!/bin/bash
# claude-export
# Purpose: Export documentation for different audiences
# Usage: claude-export [portfolio|teaching|employer]
# Last Updated: 2025-11-19

EXPORT_TYPE="$1"

if [ -z "$EXPORT_TYPE" ]; then
    echo "Usage: claude-export [portfolio|teaching|employer]"
    echo ""
    echo "Export types:"
    echo "  portfolio - Achievements and proven methodology (for showcasing work)"
    echo "  teaching  - Step-by-step methodology (for others learning AI-native development)"
    echo "  employer  - Demonstrations of capability (for job applications/interviews)"
    echo ""
    exit 1
fi

OUTPUT_DIR="${HOME}/.claude/exports"
mkdir -p "$OUTPUT_DIR"
timestamp=$(date +"%Y%m%d-%H%M%S")

case "$EXPORT_TYPE" in
    portfolio)
        echo "ðŸ“¦ Generating Portfolio Export..."
        echo ""

        OUTPUT_FILE="$OUTPUT_DIR/portfolio-${timestamp}.md"

        cat > "$OUTPUT_FILE" << 'EOF'
