{
  "env": {
    "RESUMES_DIR": "~/Desktop/Resumes_Master_2025"
  },
  "permissions": {
    "allow": [
      {
        "type": "tool",
        "tool": "Bash",
        "value": "ollama run*"
      },
      {
        "type": "tool",
        "tool": "Bash",
        "value": "python3 */query_jobs.py*"
      },
      {
        "type": "tool",
        "tool": "Bash",
        "value": "sqlite3 */job_tracker.db*"
      }
    ],
    "additionalDirectories": [
      "~/Desktop/Resumes_Master_2025"
    ]
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "postToolUse": [
      {
        "matcher": {
          "tool": "Edit",
          "path": "**/VARIANT_*.txt"
        },
        "command": "echo \"[$(date '+%Y-%m-%d %H:%M:%S')] EDIT - {{path}}\" >> ~/Desktop/Resumes_Master_2025/logs/resume_changes.log"
      },
      {
        "matcher": {
          "tool": "Edit",
          "path": "**/MASTER_RESUME_SOURCE_TRUTH.txt"
        },
        "command": "echo \"[$(date '+%Y-%m-%d %H:%M:%S')] EDIT - MASTER SOURCE - {{path}}\" >> ~/Desktop/Resumes_Master_2025/logs/resume_changes.log"
      },
      {
        "matcher": {
          "tool": "Write",
          "path": "**/resumes/**/*.txt"
        },
        "command": "echo \"[$(date '+%Y-%m-%d %H:%M:%S')] WRITE - {{path}}\" >> ~/Desktop/Resumes_Master_2025/logs/resume_changes.log"
      }
    ],
    "preToolUse": [
      {
        "matcher": {
          "tool": "Write",
          "path": "**/VARIANT_*.txt"
        },
        "command": "bash -c 'echo \"\" && echo \"‚ö†Ô∏è  WARNING: Attempting to OVERWRITE resume variant\" && echo \"File: {{path}}\" && echo \"\" && echo \"This will replace the ENTIRE file. Use Edit tool for modifications.\" && echo \"\" && read -p \"Type YES to confirm overwrite: \" confirm && [[ $confirm != \"YES\" ]] && echo \"‚ùå Overwrite cancelled\" && exit 1 || echo \"‚úÖ Overwrite confirmed\"'"
      },
      {
        "matcher": {
          "tool": "Write",
          "path": "**/MASTER_RESUME_SOURCE_TRUTH.txt"
        },
        "command": "bash -c 'echo \"\" && echo \"üö® CRITICAL: Attempting to overwrite MASTER RESUME SOURCE\" && echo \"\" && read -p \"Type CONFIRM-MASTER-OVERWRITE to proceed: \" confirm && [[ $confirm != \"CONFIRM-MASTER-OVERWRITE\" ]] && echo \"‚ùå Master overwrite BLOCKED\" && exit 1 || echo \"‚úÖ Master overwrite confirmed\"'"
      },
      {
        "matcher": {
          "tool": "Bash",
          "commandPattern": "rm.*VARIANT.*"
        },
        "command": "echo \"üõë BLOCKED: Cannot delete resume variant files via Bash\" && exit 1"
      },
      {
        "matcher": {
          "tool": "Bash",
          "commandPattern": "rm.*MASTER_RESUME.*"
        },
        "command": "echo \"üõë BLOCKED: Cannot delete master resume source via Bash\" && exit 1"
      }
    ]
  },
  "model": "sonnet[1m]"
}
